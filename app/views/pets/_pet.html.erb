<div class="col-6">
  <%= link_to pet do %>
  <% if pet.avatar.attached? %>
  <div class="card-category my-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), 
  rgba(0,0,0,0.3)), 
  url('<%= cl_image_path(pet.avatar.key) %>')
  ">    
  <% else %>
  <div class="card-category my-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), 
  rgba(0,0,0,0.3)), 
  url('https://outwardhound.com/furtropolis/wp-content/uploads/2020/03/Doggo-Lingo-Post.jpg')
  ">    
  <% end %>
    <%= pet.name %>: Owned by <%= pet.user.username %>
  </div>
  <% end %>
</div>
