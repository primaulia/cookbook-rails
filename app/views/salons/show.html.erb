<%# Banner %>

<div class="container">
  <h2 class="mt-3">List a new pet</h2>
  <%= simple_form_for [@salon, @pet] do |f| %>
    <%= f.input :name %>
    <%# We need to make sure that the model has been setup properly first %>
    <%= f.association :categories, as: :check_boxes, label: "Pick the breeds" %>
    <%= f.input :avatar, as: :file %>
    <%= f.button :submit, class: 'btn btn-block btn-primary' %>
  <% end %>
  
  <div class="row">
    <%= render @salon.pets  %>
  </div>

</div>


